rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /decks/{deckId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow write: if request.auth.uid == request.resource.data.userId;
    }

    match /games/{gameId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.ownerUserId;
      allow write: if request.auth.uid in request.resource.data.playersId;
    }

    match /games/{gameId}/playerStates/{playerUserId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null; // Figure out how to require the game owner to do this
      allow write: if request.auth.uid == playerUserId;
    }
  }
}
